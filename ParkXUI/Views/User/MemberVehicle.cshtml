@model ParkXUI.ViewModel.User.MemberVehicleViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
@section Styles {
    
    <link rel="stylesheet" href="~/css/user/member-vehicle.css" />

}
    
<div class="container">

    @await Component.InvokeAsync("CardSummary")
    <div class="container mt-5">
        <div class="row">
            <div class="col-sm-6 mb-2">
                <a class="btn-edit" asp-controller="User" asp-action="AddVehicle">
                    <i class="fa fa-plus"></i> เพิ่มยานพาหนะ
                </a>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.vehicles)
            {
                <div class="col-md-4 ">
                    <div class="card vehicle-card">
                        <div class="text-center">
                            <div class="success-icon">
                                <i class="fas fa-car"></i>
                            </div>
                            <h4 class="mt-3">@item.licensePlate @item.province</h4>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-6 text-muted">ยี่ห้อ</div>
                            <div class="col-6 text-right">@item.maker</div>
                        </div>
                        <div class="row">
                            <div class="col-6 text-muted">รุ่น</div>
                            <div class="col-6 text-right">@item.model</div>
                        </div>
                        <div class="row">
                            <div class="col-6 text-muted">ปี</div>
                            <div class="col-6 text-right">@item.year</div>
                        </div>
                        <div class="row">
                            <div class="col-6 text-muted">ประเภทยานพาหนะ</div>
                            <div class="col-6 text-right">@item.vehicleType</div>
                        </div>
                        <hr>
                        <div class="row  justify-content-center">
                          
                            <a asp-controller="User" asp-action="EditVehicle" asp-route-vehicleId="@item.rowKey"  class="btn purchase-btn "  >จัดการยานพาหนะ</a>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
